	<main>
		<form action="/users/edit/<%= user.id %>?_method=PUT" method="post" class="m-auto w-50">
			<h1><%=action%> USUARIOS</h1>
			<input type="hidden" name="id" id="id" value="<%= user.id %>">
			<div class="form-group mt-2">
				<label for="exampleInputEmail1" class="mt-2 mb-2">Email</label>
				<input type="email" name="email" value="<%= user.email %>" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
			</div>
			<div class="form-group mt-2">
				<label for="exampleInputEmail1" class="mt-2 mb-2">Nombre y apellido</label>
				<input type="name" name="name" value="<%= user.name %>" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
			</div>
			<div class="form-group mt-2">
				<label for="exampleInputEmail1" class="mt-2 mb-2">Nombre de usuario</label>
				<input type="username" name="username" value="<%= user.username %>" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
			</div>
			<div class="form-group mt-2">
				<label for="exampleInputEmail1" class="mt-2 mb-2">Tipo de usuario</label>
				<select name="type" name="type">
					<option value="1" <% if(user.id_rol == 1){%> selected <%} %> >Admin</option>
					<option value="2" <% if(user.id_rol == 2){%> selected <%} %>>Usuario</option>
				</select>
			</div>
			<!--
			<div class="form-group form-check">
			<input type="checkbox" class="form-check-input" id="exampleCheck1">
			<label class="form-check-label" for="exampleCheck1">Check me out</label>
			</div>
			-->
			<button class="btn btn-primary mt-2" id="btn_<%=action%>Post" type="submit" ><%=action%> Usuario!</button>
			<button type="button" class="btn btn-link" onclick="javascript: document.location='/users'">Volver</button>
		</form>


		<script src="/js/<%=action%>Post.js"></script>
	</main>